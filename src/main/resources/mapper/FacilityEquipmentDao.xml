<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dgut.jsf.mapper.FacilityEquipmentDao">
	<!--查询所有可用的场地设备  联合查询-->
	<select id="findFacilityEquipmentUp" resultType="FacilityEquipment">
		select * from t_facilityequipment where
		equ_quantity-equ_repairquantity!=0
	</select>
	<!--根据名称查询设备场地-->
	<select id="findFacilityEquipmentByTitle" resultType="FacilityEquipment">
		select equ.*
		from t_facilityequipment equ
		where equ_quantity-equ_repairquantity!=0
		and ${arg0} like '%${arg1}%'
		order by (equ_quantity-equ_repairquantity)
	</select>
	<!--根据id查询设备场地-->
	<select id="findFacilityEquipmentById" parameterType="int" resultType="FacilityEquipment">
		select *
		from t_facilityequipment
		where equ_id=#{equ_id}
	</select>
</mapper>
