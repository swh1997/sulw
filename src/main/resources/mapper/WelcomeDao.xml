<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dgut.jsf.mapper.WelcomeDao">

	<select id="findActivityUp" resultType="Activity">
		select *
		from t_activity
		where act_state=1
		order by act_time
	</select>

	<select id="findEquipmentUp" resultType="FacilityEquipment">
		select * from t_facilityequipment where
		equ_quantity-equ_repairquantity!=0
	</select>

	<select id="findNoticeUp" resultType="Notice">
		select * from t_notice
		where
		notice_state=1
		order by notice_date DESC
	</select>
	<select id="findCoachs" resultType="INTEGER">
		select count(coach_id) from t_coach
	</select>
	<select id="findUsers" resultType="INTEGER">
		select count(user_id) from t_user
	</select>
	<select id="findMembers" resultType="INTEGER">
		select count(member_id) from t_member
	</select>
	<select id="findAdmins" resultType="INTEGER">
		select count(admin_id) from t_admin
	</select>
	<select id="findActivities" resultType="INTEGER">
		select count(act_id) from t_activity
	</select>
	<select id="findFes" resultType="INTEGER">
		select count(equ_id) from t_facilityequipment
	</select>
	<select id="findNotices" resultType="INTEGER">
		select count(notice_id) from t_notice
	</select>

</mapper>
